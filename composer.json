{
    "name": "hillpires/laravel-mercadopago",
    "description": "Pacote completo para integração do Mercado Pago no Laravel com CRUD de configurações, teste de conexão e suporte a sandbox/produção",
    "keywords": ["laravel", "mercadopago", "pagamentos", "integração"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Hill Pires",
            "email": "hillpires@exemplo.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "mercadopago/dx-php": "^2.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "HillPires\\LaravelMercadoPago\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HillPires\\LaravelMercadoPago\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "HillPires\\LaravelMercadoPago\\MercadoPagoServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}